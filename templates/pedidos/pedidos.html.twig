{% extends 'base.html.twig' %}

{% block title %}Pedidos | {{ parent() }}{% endblock %}

{% block body %}

    {% include '_header.html.twig' %}

    <section class="hero text-center py-5">
        <h1 class="mt-3 text-rosa">Pedidos</h1>
    </section>

    <!-- Contenido principal en una sola columna -->
    <main class="container my-5" id="mainPedidos">
        <div class="row">
            <div class="col-12">
                <!-- Pedidos en curso -->
                <h2 class="mb-4">Pedidos en curso</h2>

                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h4 class="card-title">Tarta de Unicornio</h4>
                                <p><strong>Nombre en la tarta:</strong> Luiza</p>
                                <p><strong>Fecha de entrega:</strong> 2 de enero de 2025</p>
                                <p><strong>Tamaño:</strong> 20 cm de diámetro - 15-18 porciones</p>
                                <p><strong>Sabor del bizcocho:</strong> Chocolate</p>
                                <p><strong>Relleno:</strong> Fresas</p>
                                <p><strong>Cubierta:</strong> Nata vegetal</p>
                                <span class="text-muted">Estado: En preparación</span>
                            </div>
                            <div class="col-md-4 text-center">
                                <img src="{{ asset('../assets/images/tarta2.png') }}" alt="Tarta de Unicornio" class="img-fluid rounded mb-3"
                                     style="max-height: 200px;">
                                <a href="/factura">
                                    <button class="btn btn-outline-rosa">Detalles</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pedidos finalizados -->
                <h2 class="mb-4 mt-5">Pedidos finalizados</h2>

                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h4 class="card-title">Tarta de Bautizo</h4>
                                <p><strong>Nombre en la tarta:</strong> Martina</p>
                                <p><strong>Fecha de entrega:</strong> 15 de abril de 2025</p>
                                <p><strong>Tamaño:</strong> 3 pisos - 25-30 porciones</p>
                                <p><strong>Sabor del bizcocho:</strong> Vainilla</p>
                                <p><strong>Relleno:</strong> Dulce de leche</p>
                                <p><strong>Cubierta:</strong> Fondant</p>
                                <span class="text-success">Entregado</span>
                            </div>
                            <div class="col-md-4 d-flex flex-column align-items-center">
                                <img src="{{ asset('../assets/images/tarta3.png') }}" alt="Tarta de Bautizo" class="img-fluid rounded mb-3"
                                     style="max-height: 200px;">
                                <a href="/#comentarios" class="btn btn-outline-rosa">Valorar</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h4 class="card-title">Tarta de Gimnasia rítmica</h4>
                                <p><strong>Nombre en la tarta:</strong> Abril</p>
                                <p><strong>Fecha de entrega:</strong> 2 de noviembre de 2024</p>
                                <p><strong>Tamaño:</strong> 20 cm de diámetro - 20-25 porciones</p>
                                <p><strong>Sabor del bizcocho:</strong> Limón</p>
                                <p><strong>Relleno:</strong> Nata</p>
                                <p><strong>Cubierta:</strong> Fondant y buttercream</p>
                                <span class="text-success">Entregado</span>
                            </div>
                            <div class="col-md-4 d-flex flex-column align-items-center">
                                <img src="{{ asset('../assets/images/tarta11.png') }}" alt="Tarta de Gimnasia" class="img-fluid rounded mb-3"
                                     style="max-height: 200px;">
                                <a href="/#comentarios" class="btn btn-outline-rosa">Valorar</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>
    {% include '_footer.html.twig' %}

{% endblock %}