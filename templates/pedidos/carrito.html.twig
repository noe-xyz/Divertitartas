{% extends 'base.html.twig' %}

{% block title %}Carrito de compras | {{ parent() }}{% endblock %}

{% block body %}
    {% include '_header.html.twig' %}

    <!-- Contenido principal -->
    <section class="hero text-center py-5">
        <h1 class="mt-3">Carrito de Compras</h1>
    </section>

    <main class="container my-5" id="mainCarrito">
        <div class="row">
            <!-- Productos del carrito -->
            <div class="col-md-8">
                <!-- Producto 1 -->
                {% for productoCarrito in app.session.get('carrito', []) %}
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">{{ productoCarrito.nombre|capitalize }}</h4>
                                    <p class="card-text">
                                        Precio: {{ productoCarrito.precio|format_number({fraction_digit: 2}) }}€</p>
                                </div>
                                <img src="{{ asset('../assets/images/tarta3.png') }}" alt="Tarta de Ositos"
                                     class="img-thumbnail"
                                     style="width: 100px; height: 100px;">
                            </div>
                            <div class="d-flex align-items-center mt-3">
                                <input type="number" class="form-control me-3" value="1" min="1" style="width: 80px;">
                                <form action="{{ path('eliminar-carrito', {id: productoCarrito.id}) }}" method="post">
                                    <button class="btn btn-outline-danger me-2">Eliminar</button>
                                </form>
                                <button class="btn btn-outline-secondary">Guardar</button>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>El carrito está vacío.</p>
                {% endfor %}

