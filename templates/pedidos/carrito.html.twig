                {#                <div class="card mb-4 shadow-sm"> #}
                {#                    <div class="card-body"> #}
                {#                        <div class="d-flex justify-content-between"> #}
                {#                            <div> #}
                {#                                <h4 class="card-title">Tarta de Unicornio</h4> #}
                {#                                <p class="card-text">Precio: €30.00</p> #}
                {#                            </div> #}
                {#                            <img src="{{ asset('../assets/images/tarta2.png') }}" alt="Tarta de Unicornio" class="img-thumbnail" #}
                {#                                 style="width: 100px; height: 100px;"> #}
                {#                        </div> #}
                {#                        <div class="d-flex align-items-center mt-3"> #}
                {#                            <input type="number" class="form-control me-3" value="1" min="1" style="width: 80px;"> #}
                {#                            <button class="btn btn-outline-danger me-2">Eliminar</button> #}
                {#                            <button class="btn btn-outline-secondary">Guardar</button> #}
                {#                        </div> #}
                {#                    </div> #}
                {#                </div> #}

                <!-- Datos del envío -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Datos del envío</h5>
                        <div class="mb-3">
                            <p><strong>Cliente:</strong> {{ app.session.get('nombreCompleto') }}</p>
                            {% if cliente.domicilio is iterable %}
                                {% set direccion = cliente.domicilio|filter(v => v is not empty)|join(', ') %}
                                <p><strong>Dirección de envío:</strong> {{ direccion }}</p>
                            {% else %}
                                <p><strong>Dirección de envío:</strong> Por favor, añade una dirección de envío</p>
                            {% endif %} <p><strong>Teléfono:</strong> {{ cliente.telefono1 }}</p>
                            <p><strong>Fecha de envío estimada:</strong> {{ fechaDeEnvio|date('d/m/Y') }}</p>
                        </div>
                        <div class="text-end">
                            <button class="btn btn-outline-rosa"
                                    onclick="location.href='{{ path('cuenta') ~ '?id=' ~ app.session.get('id') }}'">
                                Modificar
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Columna derecha con resumen y puntos -->
            <div class="col-md-4">
                <!-- Resumen del pedido -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Resumen del Pedido</h5>
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal:</span>
                                <span>{{ subtotal|format_number({fraction_digit: 2}) }}€</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Envío:</span>
                                <span>5.00€</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between fw-bold">
                                <span>Total:</span>
                                <span>{{ total|format_number({fraction_digit: 2}) }}€</span>
                            </div>
                        </div>
                        <a href="/pago" class="btn btn-primary w-100 mt-3">Finalizar Compra</a>
                    </div>
                </div>

                <!-- Puntos acumulados -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Puntos acumulados: <span class="text-rosa">{{ cliente.puntos }}pts</span>
                        </h5>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="canjearPuntos">
                            <label class="form-check-label" for="canjearPuntos">Canjear puntos</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="usarCupon">
                            <label class="form-check-label" for="usarCupon">Utilizar código de descuento</label>
                            <input type="text" class="form-control mt-2" placeholder="Ejemplo: AAAA-BBBB-CCCC">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    {% include '_footer.html.twig' %}
{% endblock %}