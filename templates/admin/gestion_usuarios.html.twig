<div class="board-title text-center">GESTIÓN DE USUARIOS</div>
<div class="p-3">
    <!-- Tabs de Clientes y Trabajadores -->
    <ul class="nav nav-tabs mb-3" id="userTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="clientes-tab" data-bs-toggle="tab" data-bs-target="#clientes"
                    type="button" role="tab" aria-controls="clientes" aria-selected="true">Clientes
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="trabajadores-tab" data-bs-toggle="tab" data-bs-target="#trabajadores"
                    type="button" role="tab" aria-controls="trabajadores" aria-selected="false">Trabajadores
            </button>
        </li>
    </ul>

    <div class="tab-content" id="userTabsContent">
        <!-- Tab Clientes -->
        <div class="tab-pane fade show active" id="clientes" role="tabpanel" aria-labelledby="clientes-tab">
            <div class="text-center fw-bold mb-2">Clientes</div>
            <div class="table-responsive" style="max-height: 250px;">
                <table class="table table-bordered align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Razón Social</th>
                        <th>CIF</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for cliente in clientesRegistrados %}
                        <tr>
                            <td>{{ cliente.nombreCompleto }}</td>
                            <td>{{ cliente.email }}</td>
                            <td>{{ cliente.telefono1 }}
                            </td>
                            <td>{{ cliente.nombreEmpresa|default('-') }}</td>
                            <td>{{ cliente.nifCif|default('-') }}</td>
                            <td class="text-center">
                                <button class="btn btn-link p-0" title="Eliminar"><i class="bi bi-trash"></i></button>
                                <button class="btn btn-link p-0" title="Editar"><i class="bi bi-pencil"></i></button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- Buscador para clientes -->
            <form class="row g-2 align-items-center mt-3">
                <div class="col-auto">
                    <label for="searchName" class="col-form-label">Buscar por:</label>
                </div>
                <div class="col">
                    <input type="text" id="searchName" class="form-control" placeholder="Nombre">
                </div>
                <div class="col">
                    <input type="text" id="searchEmail" class="form-control" placeholder="Correo">
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-rosado px-4">Buscar</button>
                </div>
            </form>
        </div>

        <!-- Tab Trabajadores -->
        <div class="tab-pane fade" id="trabajadores" role="tabpanel" aria-labelledby="trabajadores-tab">
            <div class="text-center fw-bold mb-2">Trabajadores</div>
            <div class="table-responsive" style="max-height: 250px;">
                <table class="table table-bordered align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Turno</th>
                        <th>Puesto</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for trabajador in trabajadoresRegistrados %}
                        <tr>
                            <td>{{ trabajador.nombreCompleto }}</td>
                            <td>{{ trabajador.email }}</td>
                            <td>{{ trabajador.telefono1 }}</td>
                            <td>{{ trabajador.turno|capitalize }}</td>
                            <td>{{ trabajador.puesto|capitalize }}</td>
                            <td class="text-center">
                                <button class="btn btn-link p-0" title="Eliminar"><i class="bi bi-trash"></i></button>
                                <button class="btn btn-link p-0" title="Editar"><i class="bi bi-pencil"></i></button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- Buscador para trabajadores -->
            <form class="row g-2 align-items-center mt-3">
                <div class="col-auto">
                    <label for="searchNameTrab" class="col-form-label">Buscar por:</label>
                </div>
                <div class="col">
                    <input type="text" id="searchNameTrab" class="form-control" placeholder="Nombre">
                </div>
                <div class="col">
                    <input type="text" id="searchEmailTrab" class="form-control" placeholder="Correo">
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-rosado px-4">Buscar</button>
                </div>
            </form>

            <!-- Formulario para añadir un nuevo trabajador -->
            <form class="row g-2 align-items-center mt-4" method="post" action="ruta_al_controlador_que_guarda_trabajador.php">
                <div class="col">
                    <input type="text" name="nombreCompleto" class="form-control" placeholder="Nombre completo" required>
                </div>
                <div class="col">
                    <input type="email" name="email" class="form-control" placeholder="Correo" required>
                </div>
                <div class="col">
                    <input type="password" name="password" class="form-control" placeholder="Contraseña" required>
                </div>
                <div class="col">
                    <input type="text" name="telefono1" class="form-control" placeholder="Teléfono" required>
                </div>
                <div class="col">
                    <input type="text" name="turno" class="form-control" placeholder="Turno" required>
                </div>
                <div class="col">
                    <input type="text" name="puesto" class="form-control" placeholder="Puesto" required>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-uniforme px-4">Añadir trabajador</button>
                </div>
            </form>

        </div>
    </div>
</div>
