{% extends 'base.html.twig' %}

{% set categoriaLegible = {
    'mas-productos': 'Más Productos',
    'preferencias': 'Especiales con Preferencias Alimenticias',
    'tartas-creativas': 'Tartas Creativas'
}[categoria] %}

{% block title %}{{ categoriaLegible }} | {{ parent() }}{% endblock %}

{% block body %}

    {% include '_header.html.twig' %}

    <!-- Contenido específico de la categoría -->
    <main class="container my-5">
        <div class="category-header text-center mb-5">
            <h1>{{ mensajes.titulo }}</h1>
            <p class="lead">{{ mensajes.subtitulo }}</p>
        </div>

        {% if productosMostrados is empty %}

            <h2 style="color: #333; width: 100%; margin: auto">No encontramos tartas en esta categoría...</h2>

        {% else %}
            {% for producto in productosMostrados %}
                <div class="row" id="rowProductos">
                    <!-- Contenedor de producto -->
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="card h-100 shadow-sm product-card">
                            <div class="card-img-container">
                                <img src="Imagenes/tarta1.png" class="card-img-top" alt="Tarta Boda 1">
                            </div>
                            <div class="card-body text-center">
                                <h5 class="card-title">{{ producto.nombre }}</h5>
                                <a href="/productos/{{ producto.categoria }}/{{ producto.slug }}" class="stretched-link"></a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}

        <div class="text-center mt-4">
            <a href="/productos" class="custom-btn" style="text-decoration: none;">Volver a todos los productos</a>
        </div>
    </main>

    {% include '_footer.html.twig' %}
{% endblock %}

